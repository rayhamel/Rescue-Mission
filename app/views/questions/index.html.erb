<h1>Listing questions</h1>

<%= link_to 'New question', new_question_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
 
  <% @questions.reverse_each do |question| %>
    <tr>
      <td><%= question.title %></td>
      <td><%= render_safe_markdown(question.description) %></td>
      <td><%= link_to 'Show', question_path(question) %></td>
      <td><%= link_to 'Edit', edit_question_path(question) %></td>
      <td><%= link_to 'Destroy', question_path(question), method: :delete%></td>
    </tr>
  <% end %>
</table>

<table>
  <% @questions.each do |question| %>
    <tr>
      <th>Recent Comments On <%= %Q("#{question.title}") %></th>
    </tr>
    <% question.answers.each do |answer| %>
      <tr><td><%= render_safe_markdown(answer.description) %><td></tr>
    <% end %>
  <% end %>
</table>
